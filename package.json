{
  "name": "ali-react-table-monorepo",
  "private": true,
  "version": "0.0.0",
  "description": "高性能 React 表格组件",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "website:start": "yarn workspace website start",
    "website:build": "yarn workspace website build",
    "storybook:start": "yarn workspace storybook start",
    "storybook:build": "yarn workspace storybook build",
    "build-all": "yarn website:build && yarn storybook:build",
    "collect-files": "rimraf website-deploy && copyfiles --up=3 \"packages/website/build/**/*\" website-deploy/beta/ && copyfiles --up=3 \"packages/storybook/storybook-dist/**/*\" website-deploy/beta/storybook/",
    "prepare-website-deploy": "yarn build-all && yarn collect-files"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alibaba/ali-react-table.git"
  },
  "homepage": "https://github.com/alibaba/ali-react-table",
  "author": {
    "name": "Shi Feichao",
    "email": "842351815@qq.com"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "semi": false,
    "trailingComma": "all"
  },
  "devDependencies": {
    "copyfiles": "^2.4.0",
    "prettier": "^2.1.2",
    "typescript": "^4.0.3"
  }
}

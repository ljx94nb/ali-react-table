{
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "target": "es2019",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "ali-react-table": ["../ali-react-table/src/ali-react-table.ts"],
      "ali-react-table/pivot": ["../ali-react-table/src/ali-react-table-pivot.ts"],
      "assets": ["../assets/src/index.ts"]
    }
  },
  "include": ["src/**/*", "stories/**/*", "assets/**/*"]
}

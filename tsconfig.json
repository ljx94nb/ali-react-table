{
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "target": "es2019",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "ali-react-table": ["src/ali-react-table.ts"],
      "ali-react-table/pivot": ["src/pivot/pivot.ts"],
      "ali-react-table/biz": ["src/biz/biz.ts"]
    }
  },
  "include": ["src/**/*", "stories/**/*"]
}
